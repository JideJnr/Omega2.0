{
  "compilerOptions": {
    "target":           "ES2022",
    "module":           "ES2022",
    "moduleResolution": "node",
    "rootDir":          "src",   // compile from src/
    "outDir":           "dist",
    "esModuleInterop":  true,
    "strict":           true,
    "skipLibCheck":     true
  },
  "include": [
    "src/**/*"               // pick up everything under src
  ]
}
